{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "target": "ES6",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "incremental": true,
    "typeRoots": [
      "./node_modules/@types",
      "./vendors"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "vite-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "vendors/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "src/sw.ts"
  ]
}